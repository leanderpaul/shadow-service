{
  "name": "@leanderpaul/shadow-service",
  "version": "0.0.12",
  "type": "module",
  "private": true,
  "description": " Library containing code for all shadow microservices",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install && ts-patch install -s",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "node ./scripts/prepare-dist.cjs",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/leanderpaul/shadow-service.git"
  },
  "author": "Leander Paul",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leanderpaul/shadow-service/issues"
  },
  "homepage": "https://github.com/leanderpaul/shadow-service#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/html-minifier": "^4.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-patch": "^3.0.2",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">= 20.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.449.0",
    "@sendgrid/mail": "^7.7.0",
    "bson": "^6.2.0",
    "fast-safe-stringify": "^2.1.1",
    "handlebars": "^4.7.8",
    "html-minifier": "^4.0.0",
    "winston": "^3.11.0"
  }
}
